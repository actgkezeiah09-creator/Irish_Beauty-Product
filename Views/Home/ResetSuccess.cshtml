@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Password Reset Successful";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-4 text-center" style="width: 400px;">
        <div class="text-success mb-3">
            <i class="fas fa-check-circle fa-4x"></i>
        </div>
        <h4 class="text-success">Password Reset Successful!</h4>
        <p class="text-muted mb-3">You will be redirected to the login page shortly...</p>
        <a asp-action="Login" asp-controller="Home" class="btn btn-primary">Go to Login</a>
    </div>
</div>

@section Scripts {
    <script>
        // Auto redirect to login in 3 seconds
        setTimeout(function () {
            window.location.href = '@Url.Action("Login", "Home")';
        }, 3000);
    </script>
}

