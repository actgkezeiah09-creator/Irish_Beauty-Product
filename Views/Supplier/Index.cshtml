@model IEnumerable<Supplier>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Supplier Management";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Supplier Management</h1>
        <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addSupplierModal">
            <i class="fas fa-plus"></i> Add Supplier
        </button>
    </div>

    <!-- Supplier Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Registered Suppliers</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="supplierTable" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Supplier Name</th>
                            <th>Email</th>
                            <th>Contact</th>
                            <th>Address</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model)
                        {
                            <tr>
                                <td>@s.Name</td>
                                <td>@s.Email</td>
                                <td>@s.ContactNumber</td>
                                <td>@s.Address</td>
                                <td>
                                    <button class="btn btn-success btn-sm reorder-btn"
                                            data-id="@s.Id"
                                            data-name="@s.Name"
                                            data-email="@s.Email">
                                        <i class="fas fa-shopping-cart"></i> Order
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add Supplier Modal -->
<div class="modal fade" id="addSupplierModal" tabindex="-1" role="dialog" aria-labelledby="addSupplierModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="addSupplierModalLabel">Add New Supplier</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addSupplierForm">
                    <div class="form-group">
                        <label>Supplier Name</label>
                        <input type="text" id="supplierNameInput" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" id="supplierEmailInput" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label>Contact Number</label>
                        <input type="text" id="supplierContactInput" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <textarea id="supplierAddressInput" class="form-control" required></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button id="saveSupplierBtn" class="btn btn-primary">Save Supplier</button>
            </div>
        </div>
    </div>
</div>

<!-- Order Modal -->
<div class="modal fade" id="orderModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Order Product from <span id="supplierName"></span></h5>
                <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="orderForm">
                    <input type="hidden" id="supplierId" />
                    <input type="hidden" id="supplierEmail" />
                    <div class="form-group">
                        <label>Product Description</label>
                        <textarea id="productDescription" class="form-control" placeholder="Enter product name and details" required></textarea>
                    </div>
                    <div class="form-group">
                        <label>Quantity</label>
                        <input type="number" id="quantity" class="form-control" min="1" required />
                    </div>
                </form>
               
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button id="confirmOrderBtn" class="btn btn-success">Confirm Order</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
          
            $("#saveSupplierBtn").on("click", function (e) {
                e.preventDefault();

                var name = $("#supplierNameInput").val().trim();
                var email = $("#supplierEmailInput").val().trim();
                var contact = $("#supplierContactInput").val().trim();
                var address = $("#supplierAddressInput").val().trim();

                if (!name || !email || !contact || !address) {
                    alert("Please fill out all fields!");
                    return;
                }

                $(this).prop("disabled", true);

                $.ajax({
                    url: '/Supplier/AddSupplier',
                    type: 'POST',
                    data: { Name: name, Email: email, ContactNumber: contact, Address: address }
                })
                .done(function (resp) {
                    if (resp && resp.success) {
                        $("#addSupplierModal").modal("hide");
                        $("#addSupplierForm")[0].reset();
                        location.reload();
                    } else {
                        alert("Failed to add supplier: " + (resp?.message || "Unknown error"));
                    }
                })
                .fail(function (xhr, status, err) {
                    console.error("AddSupplier failed:", status, err, xhr.responseText);
                    alert("An error occurred while saving the supplier.");
                })
                .always(() => $("#saveSupplierBtn").prop("disabled", false));
            });

            
            $(document).on("click", ".reorder-btn", function () {
                var id = $(this).data("id");
                var name = $(this).data("name");
                var email = $(this).data("email");

                $("#supplierId").val(id);
                $("#supplierEmail").val(email);
                $("#supplierName").text(name);
                $("#productDescription").val("");
                $("#quantity").val("");

                $("#orderModal").modal("show");
            });

            
            $("#confirmOrderBtn").on("click", function (e) {
                e.preventDefault();

                var supplierId = parseInt($("#supplierId").val() || 0, 10);
                var supplierEmail = $("#supplierEmail").val().trim();
                var description = $("#productDescription").val().trim();
                var qty = parseInt($("#quantity").val() || 0, 10);

                if (!supplierId || !description || !qty) {
                    alert("Please fill out all fields!");
                    return;
                }

                $(this).prop("disabled", true);

                $.ajax({
                    url: '/Supplier/OrderProduct',
                    type: 'POST',
                    dataType: 'json',
                    data: { supplierId: supplierId, productDescription: description, quantity: qty, supplierEmail: supplierEmail }
                })
                .done(function (resp) {
                    if (resp && resp.success) {
                        alert(resp.message || "Order placed successfully!");
                        $("#orderModal").modal("hide");
                    } else {
                        alert("Failed to order product: " + (resp?.message || "Unknown error"));
                    }
                })
                .fail(function (xhr, status, err) {
                    console.error("OrderProduct failed:", status, err, xhr.responseText);
                    alert("An error occurred while placing the order.");
                })
                .always(() => $("#confirmOrderBtn").prop("disabled", false));
            });
        });
    </script>
}
